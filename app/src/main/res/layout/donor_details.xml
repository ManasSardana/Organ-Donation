<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/donor_list_background">

            <TextView
                android:id="@+id/id"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="76dp"
                android:background="@drawable/circle"
                android:gravity="center"
                android:padding="8dp"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="32sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/donor_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/text_view_background"
                android:padding="4dp"
                android:text="Name"
                android:textColor="@color/black"
                app:layout_constraintStart_toEndOf="@+id/id"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/donor_dob"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/text_view_background"
                android:padding="4dp"
                android:text="DOB"
                android:textColor="@color/black"
                app:layout_constraintStart_toEndOf="@+id/id"
                app:layout_constraintTop_toBottomOf="@+id/donor_name" />

            <TextView
                android:id="@+id/donor_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/text_view_background"
                android:padding="4dp"
                android:text="Gender"
                android:textColor="@color/black"
                app:layout_constraintStart_toEndOf="@+id/id"
                app:layout_constraintTop_toBottomOf="@+id/donor_dob" />

            <TextView
                android:id="@+id/donor_blood_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/text_view_background"
                android:padding="4dp"
                android:text="Blood Group"
                android:textColor="@color/black"
                app:layout_constraintStart_toEndOf="@+id/donor_gender"
                app:layout_constraintTop_toBottomOf="@+id/donor_dob" />

            <TextView
                android:id="@+id/donor_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="56dp"
                android:background="@drawable/text_view_background"
                android:lines="2"
                android:padding="4dp"
                android:text="City and Pincode"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/donor_phone_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/text_view_background"
                android:padding="4dp"
                android:text="Phone Number"
                android:textColor="@color/black"
                app:layout_constraintStart_toEndOf="@+id/donor_blood_group"
                app:layout_constraintTop_toBottomOf="@+id/donor_dob" />

            <TextView
                android:id="@+id/donor_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/text_view_background"
                android:padding="4dp"
                android:text="Email"
                android:textColor="@color/black"
                app:layout_constraintStart_toEndOf="@+id/id"
                app:layout_constraintTop_toBottomOf="@+id/donor_blood_group" />

            <TextView
                android:id="@+id/donor_parts"
                android:layout_width="225dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="56dp"
                android:layout_marginBottom="24dp"
                android:background="@drawable/text_view_background"
                android:lines="2"
                android:padding="4dp"
                android:text="Body Parts"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/id"
                app:layout_constraintTop_toBottomOf="@+id/donor_email" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>